<div class="min-h-screen flex items-center justify-center bg-green-50 px-6 py-12">
  <div class="max-w-md w-full bg-white rounded-2xl shadow-xl p-8 space-y-6">
    
    <h2 class="text-3xl font-bold text-gray-800 text-center">Log in to your account</h2>
    <p class="text-sm text-gray-500 text-center">Fresh groceries, delivered to your door</p>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="space-y-4">
        <!-- Email -->
        <div>
          <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 block w-full rounded-xl border border-gray-300 shadow-sm focus:ring-green-500 focus:border-green-500 px-4 py-2" %>
        </div>

        <!-- Password -->
        <div>
          <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "mt-1 block w-full rounded-xl border border-gray-300 shadow-sm focus:ring-green-500 focus:border-green-500 px-4 py-2" %>
        </div>

        <!-- Remember Me -->
        <% if devise_mapping.rememberable? %>
          <div class="flex items-center">
            <%= f.check_box :remember_me, class: "h-4 w-4 text-green-600 focus:ring-green-500 border-gray-300 rounded" %>
            <%= f.label :remember_me, class: "ml-2 block text-sm text-gray-700" %>
          </div>
        <% end %>

        <!-- Submit Button -->
        <div>
          <%= f.submit "Log In", class: "w-full bg-green-600 hover:bg-green-700 text-white font-semibold py-2 px-4 rounded-xl transition duration-200 shadow" %>
        </div>
      </div>
    <% end %>

    <!-- Links -->
    <div class="text-center text-sm text-gray-500 pt-4">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
