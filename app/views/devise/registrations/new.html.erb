<div class="min-h-screen flex flex-col md:flex-row">
  <!-- Left Panel with Illustration -->
  <div class="hidden md:flex w-1/2 bg-green-100 items-center justify-center p-12">
    <img src="https://res.cloudinary.com/dg8uazb1f/image/upload/v1749990973/signup-image-min_uvwc9a.png"
         alt="Grocery delivery illustration"
         class="max-w-full h-auto"/>
  </div>

  <!-- Right Panel: Form -->
  <div class="flex w-full md:w-1/2 items-center justify-center bg-green-50 p-6">
    <div class="max-w-md w-full bg-white rounded-2xl shadow-xl p-8 space-y-6">
      
      <h2 class="text-3xl font-bold text-gray-800 text-center">Create your account</h2>
      <p class="text-sm text-gray-500 text-center">Start receiving fresh groceries at your doorstep</p>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="space-y-4">
          <!-- Email -->
          <div>
            <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email",
                               class: "mt-1 block w-full rounded-xl border border-gray-300 shadow-sm focus:ring-green-500 focus:border-green-500 px-4 py-2" %>
          </div>

          <!-- Password -->
          <div>
            <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
            <%= f.password_field :password, autocomplete: "new-password",
                                 class: "mt-1 block w-full rounded-xl border border-gray-300 shadow-sm focus:ring-green-500 focus:border-green-500 px-4 py-2" %>
          </div>

          <!-- Password Confirmation -->
          <div>
            <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password",
                                 class: "mt-1 block w-full rounded-xl border border-gray-300 shadow-sm focus:ring-green-500 focus:border-green-500 px-4 py-2" %>
          </div>

          <!-- Submit Button -->
          <div>
            <%= f.submit "Sign Up", class: "w-full bg-green-600 hover:bg-green-700 text-white font-semibold py-2 px-4 rounded-xl transition duration-200 shadow" %>
          </div>
        </div>
      <% end %>

      <!-- Links -->
      <div class="text-center text-sm text-gray-500 pt-4">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
