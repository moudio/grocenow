<section class="py-16 bg-gray-50">
  <div class="container mx-auto px-6">
    <h1 class="text-3xl md:text-4xl font-bold text-gray-800 mb-10 text-center">Available Groceries</h1>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8">
      <% @grocery_items.each do |item| %>
        <%= link_to grocery_item_path(item), class: "block bg-white rounded-2xl shadow-md hover:shadow-lg transition duration-300 p-5" do %>
          <img src="<%= item.image_url %>" alt="<%= item.name %>" class="w-full h-48 object-cover rounded-xl mb-4">
          
          <div>
            <h2 class="text-lg font-semibold text-gray-900"><%= item.name %></h2>
            <p class="text-sm text-gray-500 mb-2"><%= item.category %></p>
          </div>

          <div class="mt-4 flex items-center justify-between">
            <p class="text-green-700 font-bold text-lg">FCFA <%= number_to_currency(item.price, unit: "", delimiter: " ", precision: 0) %></p>
            <span class="text-sm text-green-600 font-medium hover:underline">View</span>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</section>
