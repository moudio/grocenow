<h1 class="text-2xl font-bold mb-4">Available Groceries</h1>

<div class="grid grid-cols-1 md:grid-cols-3 gap-6">
  <% @grocery_items.each do |item| %>
    <div class="bg-white shadow rounded-xl p-4">
      <img src="<%= item.image_url %>" alt="<%= item.name %>" class="w-full h-40 object-cover rounded-md mb-3">
      <h2 class="text-lg font-semibold"><%= item.name %></h2>
      <p class="text-sm text-gray-500 mb-2"><%= item.category %></p>
      <p class="font-bold text-green-700">FCFA <%= number_to_currency(item.price, unit: "", delimiter: " ", precision: 0) %></p>
    </div>
  <% end %>
</div>
