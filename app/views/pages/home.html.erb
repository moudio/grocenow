<!-- app/views/pages/home.html.erb -->


<!-- Hero Section -->
<section class="bg-green-50 min-h-screen flex items-center">
  <div class="container mx-auto px-6 py-16 grid grid-cols-1 md:grid-cols-2 gap-10 items-center">
    <!-- Left Content -->
    <div>
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 leading-tight">
        Fresh groceries,<br />
        <span class="text-green-600">delivered to your door</span>
      </h1>
      <p class="mt-6 text-lg text-gray-600">
        Get the best fruits, vegetables, and essentials in minutes. No lines, no stress — just freshness.
      </p>
      <div class="mt-8 flex flex-wrap gap-4">
        <%= link_to "Get Started", new_user_registration_path, class: "bg-green-600 text-white px-6 py-3 rounded-xl text-lg font-semibold hover:bg-green-700 transition" %>
        <a href="#how-it-works" class="text-green-600 border border-green-600 px-6 py-3 rounded-xl text-lg font-semibold hover:bg-green-100 transition">
          How it Works
        </a>
      </div>
    </div>

    <!-- Right Image -->
    <div class="w-full">
      <img src="https://res.cloudinary.com/dg8uazb1f/image/upload/v1749989748/groceries-min_eqsfhf.png" alt="Grocery Items" class="w-auto h-auto rounded-xl" />
    </div>
  </div>
</section>

<!-- Featured -->
<section class="py-20 bg-white">
  <div class="container mx-auto px-6">
    <h2 class="text-3xl md:text-4xl font-bold text-gray-800 mb-10 text-center">Featured Groceries</h2>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8">
      <% @featured_items.each do |item| %>
        <%= link_to grocery_item_path(item), class: "block bg-green-50 rounded-2xl shadow hover:shadow-lg transition duration-300 p-5" do %>
          <img src="<%= item.image_url %>" alt="<%= item.name %>" class="w-full h-48 object-cover rounded-xl mb-4">
          
          <div>
            <h3 class="text-lg font-semibold text-gray-900"><%= item.name %></h3>
            <p class="text-sm text-gray-500 mb-2"><%= item.category %></p>
          </div>

          <div class="mt-4 flex items-center justify-between">
            <p class="text-green-700 font-bold text-lg">FCFA <%= number_to_currency(item.price, unit: "", delimiter: " ", precision: 0) %></p>
            <span class="text-sm text-green-600 font-medium hover:underline">View</span>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</section>

