<!-- Hero Section -->
<section class="bg-green-50 min-h-screen flex items-center">
  <div class="container mx-auto px-6 py-16 grid grid-cols-1 md:grid-cols-2 gap-10 items-center">
    <!-- Left Content -->
    <div>
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 leading-tight">
        Fresh groceries,<br />
        <span class="text-green-600">delivered to your door</span>
      </h1>
      <p class="mt-6 text-lg text-gray-600">
        Get the best fruits, vegetables, and essentials in minutes. No lines, no stress — just freshness.
      </p>
      <div class="mt-8 flex flex-wrap gap-4">
        <%= link_to "Get Started", new_user_registration_path, class: "bg-green-600 text-white px-6 py-3 rounded-xl text-lg font-semibold hover:bg-green-700 transition" %>
        <a href="#how-it-works" class="text-green-600 border border-green-600 px-6 py-3 rounded-xl text-lg font-semibold hover:bg-green-100 transition">
          How it Works
        </a>
      </div>
    </div>

    <!-- Right Image -->
    <div class="w-full">
      <img src="https://res.cloudinary.com/dg8uazb1f/image/upload/v1749989748/groceries-min_eqsfhf.png" alt="Grocery Items" class="w-auto h-auto rounded-xl" />
    </div>
  </div>
</section>

<!-- How It Works -->
<section id="how-it-works" class="py-20 bg-white">
  <div class="container mx-auto px-6 text-center">
    <h2 class="text-3xl font-bold text-gray-800">How It Works</h2>
    <div class="mt-12 grid md:grid-cols-3 gap-10 text-left">
      <div>
        <h3 class="text-xl font-semibold text-green-600 mb-2">1. Browse & Order</h3>
        <p class="text-gray-600">Explore our wide range of fresh groceries and place your order in just a few clicks.</p>
      </div>
      <div>
        <h3 class="text-xl font-semibold text-green-600 mb-2">2. We Pack with Care</h3>
        <p class="text-gray-600">Our team handpicks and packs your items with care for maximum freshness.</p>
      </div>
      <div>
        <h3 class="text-xl font-semibold text-green-600 mb-2">3. Delivery in Minutes</h3>
        <p class="text-gray-600">Sit back and relax — your order will be delivered to your door, fast and fresh.</p>
      </div>
    </div>
  </div>
</section>

<!-- Why Choose Us / Benefits -->
<section id="benefits" class="bg-green-50 py-20">
  <div class="container mx-auto px-6 text-center">
    <h2 class="text-3xl font-bold text-gray-800 mb-12">Why Choose GroceNow?</h2>
    <div class="grid md:grid-cols-3 gap-10 text-left">
      <div>
        <h3 class="text-xl font-semibold text-green-600 mb-2">Top-Quality Produce</h3>
        <p class="text-gray-600">We partner with trusted local farms and suppliers to bring you the best of the season.</p>
      </div>
      <div>
        <h3 class="text-xl font-semibold text-green-600 mb-2">Affordable Prices</h3>
        <p class="text-gray-600">Fresh doesn’t have to mean expensive — our prices stay fair and competitive.</p>
      </div>
      <div>
        <h3 class="text-xl font-semibold text-green-600 mb-2">Sustainable Practices</h3>
        <p class="text-gray-600">Eco-friendly packaging and mindful sourcing are part of our everyday mission.</p>
      </div>
    </div>
  </div>
</section>

