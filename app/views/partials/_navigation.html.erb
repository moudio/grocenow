<nav class="bg-green-600 text-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex h-16 justify-between items-center">
      <!-- Logo and Brand -->
      <div class="flex items-center">
      <%= link_to root_path, class: "flex items-center hover:opacity-80 transition" do %>
            <img class="h-8 w-auto" src="https://cdn-icons-png.flaticon.com/512/3081/3081648.png" alt="Grocery Logo" />
            <span class="ml-2 text-xl font-bold">GroceNow</span>
        <% end %>
      </div>

      <!-- Desktop Menu -->
      <div class="hidden sm:flex space-x-6">
        <%= link_to "Home", root_path, class: "hover:bg-green-700 px-3 py-2 rounded-md text-sm font-medium" %>
        <%= link_to "Shop", grocery_items_index_path, class:"hover:bg-green-700 px-3 py-2 rounded-md text-sm font-medium"%>
        <% if user_signed_in? %>  
        <%= link_to "Orders", orders_path, class: "hover:bg-green-700 px-3 py-2 rounded-md text-sm font-medium" %>
        <% end %>
        <%= link_to "Support", support_path, class: "hover:bg-green-700 px-3 py-2 rounded-md text-sm font-medium" %>
      </div>
      <% if user_signed_in? %>
      <%= link_to "Log Out", destroy_user_session_path, method: :delete, class: "hover:bg-green-700 px-3 py-2 rounded-md text-sm font-medium" %>
      <%= image_tag("https://cdn-icons-png.flaticon.com/512/706/706830.png", alt: "User Avatar", class: "h-8 w-8 rounded-full") %>
      <% else %>
      <!-- Profile / Login -->
      <div class="hidden sm:flex items-center space-x-4">
       <div class="hidden sm:flex items-center space-x-4">
            <%= link_to "Log In", new_user_session_path, class: "bg-white text-green-700 px-4 py-2 rounded-xl text-sm font-semibold hover:bg-gray-100 transition" %>
        </div>
      </div>
      <% end %>
      <!-- Mobile menu button -->
      <div class="sm:hidden">
        <button id="mobile-menu-button" class="text-white focus:outline-none">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="sm:hidden hidden px-2 pb-3 space-y-1">
    <a href="#" class="block px-3 py-2 rounded-md text-base font-medium hover:bg-green-700">Home</a>
    <a href="#" class="block px-3 py-2 rounded-md text-base font-medium hover:bg-green-700">Shop</a>
    <% if user_signed_in? %>
    <a href="#" class="block px-3 py-2 rounded-md text-base font-medium hover:bg-green-700">Orders</a>
    <% end %>
    <a href="#" class="block px-3 py-2 rounded-md text-base font-medium hover:bg-green-700">Support</a> 
    <%= link_to "Log In", new_user_session_path, class: "block w-full text-center px-4 py-2 mt-2 rounded-xl text-base font-semibold text-white bg-green-600 hover:bg-green-700 shadow transition duration-200" %>
  </div>

  <script>
    const btn = document.getElementById('mobile-menu-button');
    const menu = document.getElementById('mobile-menu');
    btn.addEventListener('click', () => {
      menu.classList.toggle('hidden');
    });
  </script>
</nav>
